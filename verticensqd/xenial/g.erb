#!/bin/sh

<%= @package_dir = @basic[:home]/@package[:package] %>

mkdir -p .<%= @package_dir %>

wget -r -c -O nsqd.tar.gz @package[:tar]

tar -xvf nsqd.tar.gz -C .<%= @package_dir %>/ --strip-components=1 && rm nsqd.tar.gz

cp ./etc/systemd/system/nsqlookupd .<%= @package_dir %>/
cp ./etc/systemd/system/nsqadmin .<%= @package_dir %>/

fpm -s dir -t deb  -f  --iteration <%= @basic[:iteration] %> -v <%= @basic[:version] %> \
-n <%= @package[:package] %>  \
--before-install ./preinst --after-install ./postinstall  \
--after-remove ./prerm  --after-remove ./postrm  \
--deb-systemd ./etc/systemd/system/<%= @package[:systemd_nsqd_service] %> \
--license "<%= @basic[:license] %>" --vendor "<%= @basic[:vendor] %>" --category "<%= @package[:category] %>" \
--maintainer "<%= @basic[:maintainer] %>" --url "<%= @basic[:url] %>" --description "<%= @package[:description] %>"  .<%= @package_dir %>
