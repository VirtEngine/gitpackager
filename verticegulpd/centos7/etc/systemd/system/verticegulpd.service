[Unit]
Description=Vertice Gulpd Agent
After=local-fs.target network.target
Requires=network.target
Wants=local-fs.target

[Service]
User=root
Group=root
EnvironmentFile=/var/lib/megam/env.sh
ExecStart= /usr/share/megam/verticegulpd/bin/gulpd start --config /usr/share/megam/verticegulpd/conf/gulpd.conf
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
