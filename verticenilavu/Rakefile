require 'rake'
require '../version.rb'
require './config.rb'
puts ">> ------------- [#{Pkg::Ger::CONFIG[:name]} #{Pkg::Ger::VERSION} #{Pkg::Ger::ITERATION}]"

megger = Pkg::Ger.new

nix_dir = 'nix'
build_dir = 'build'

task default: :trusty

task :clean do
  rm_rf build_dir
end

task :initnix do
  mkdir_p build_dir
  mkdir_p megger.build_halwa
end

# this overrides the nix/ stuff with halwa specific stuff.
task nix: [:initnix] do
  Rake::FileList["#{megger.halwa}" + '/**'].each do |f|
    target = File.join megger.build_halwa, File.basename(f)
    cp_r f, target
  end if File.exist?(megger.halwa)

  Dir.chdir megger.build_halwa
  mkdir_p 'var/www'
  Rake::Task[:clone].invoke
  system './g', Pkg::Ger::CONFIG[:name], Pkg::Ger::VERSION, Pkg::Ger::ITERATION
end

task :trusty do
  megger.halwa =nix_dir
  megger.build_halwa = 'build/trusty'
  Rake::Task[:nix].invoke
end

task :centos7 do
  megger.halwa = 'centos7'
  megger.build_halwa = 'build/centos7'
  Rake::Task[:nix].invoke
end

task :jessie do
  megger.halwa = 'jessie'
  megger.build_halwa = 'build/jessie'
  Rake::Task[:nix].invoke
end

task :clone do
  unless File.exist? 'nilavu/'
    Dir.chdir 'var/www'
    system "git clone -b #{Pkg::Ger::CONFIG[:branch]} https://gitlab.com/megamsys/nilavu.git verticenilavu"
 end
  Dir.chdir 'verticenilavu/config'
  #File.write("nilavu.yml",File.open("nilavu.yml",&:read).gsub("build.date",Time.new.strftime("%Y-%m-%d %H:%M:%S")))
  Dir.chdir '../../../..'
end
