#!/bin/sh

if [ -d <%= @basic[:loghome]+"/"+@package[:package] %> ]; then
  rm -rf <%= @basic[:loghome]+"/"+@package[:package] %>
fi

if [ -d <%= @basic[:libhome] %>/site_settings.yml ]; then
  rm -rf <%= @basic[:libhome] %>/site_settings.yml
fi

if  [ -d <%= @basic[:libhome] %>/nilavu.conf ]; then
  rm -rf <%= @basic[:libhome] %>/nilavu.conf
fi

if [ -d <%= @basic[:libhome] %>/regions.yml ]; then
  rm -rf <%= @basic[:libhome] %>/regions.yml
fi

if [ -d /etc/runit ]; then
  rm -rf /etc/runit
fi

if [ -d /etc/service/<%= @package[:upstart_service] %> ]; then
  rm -rf /etc/service/<%= @package[:upstart_service] %>
fi

if [ -d /etc/service/nginx ]; then
  rm -rf /etc/service/nginx
fi

if [ -d /etc/service/cron ]; then
  rm -rf /etc/service/cron
fi

if [ -d /etc/service/rsyslog ]; then
  rm -rf /etc/service/rsyslog
fi

if [ -d /var/www/<%= @package[:package] %> ]; then
  rm -rf /var/www/<%= @package[:package] %>
fi

