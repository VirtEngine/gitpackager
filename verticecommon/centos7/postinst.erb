#!/bin/sh

set -e

MEGAMHOME=<%= @basic[:libhome] %>
MEGAM_INSTALLHOME=<%= @basic[:home] %>

mkdir -p <%= @basic[:home] %>
mkdir -p <%= @basic[:libhome] %>
mkdir -p <%= @basic[:loghome] %>
mkdir -p <%= @basic[:runhome] %>


if [ "$1" = "configure" ]; then
    if ! [ -d "$MEGAM_INSTALLHOME" ]; then
        mkdir "$MEGAM_INSTALLHOME"
    fi
fi
