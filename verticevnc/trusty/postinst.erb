mkdir -p <%= @basic[:libhome]+"/"+@package[:package] %>

cd <%= @basic[:libhome]+"/"+@package[:package] %>

wget https://nodejs.org/dist/v6.9.4/node-v6.9.4-linux-x64.tar.xz
