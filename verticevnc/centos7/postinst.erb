#!/bin/bash

mkdir -p <%= @basic[:libhome]+"/"+@package[:package]  %>

cd <%= @basic[:libhome] %>

 wget http://nodejs.org/dist/v0.10.30/node-v0.10.30.tar.gz
 tar xzvf node-v*
 cd node-v*
./configure
  make
  sudo make install

rm -rf usr/bin/node
cp /usr/local/bin/node /usr/bin/node

mv /etc/rc.d/init.d/virtenginevnc.service /etc/systemd/system/

#cat >> /var/lib/megam/env.sh << EOF
#MEGAM_HOME='/var/lib/megam/'
#EOF

#chmod 0755 <%= @basic[:home] %>/env.sh

systemctl enable virtenginevnc.service
systemctl start  virtenginevnc.service
